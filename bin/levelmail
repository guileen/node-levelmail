#!/usr/bin/env node

var program = require('commander')
program
  .version('0.0.1')
  .option('-d --daemon')
  .parse(process.argv)
  ;

if(program.daemon) {
    require('master').daemon({
            stdout: process.env.LOG_FILE || 'levelmail.log',
            stderr: process.env.ERROR_LOG || process.env.LOG_FILE || 'levelmail.log',
            worker: run
    })
} else {
    run()
}

function run() {
    require('../server')
    require('./www')
}

